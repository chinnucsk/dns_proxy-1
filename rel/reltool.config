{sys, [
       {lib_dirs, ["../apps"]},
       {rel, "dns_cache_and_forward", "1",
        [
         kernel,
         stdlib,
         sasl
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "dns_cache_and_forward"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {app, sasl, [{incl_cond, include}]},
       {app, dns_udp, [{incl_cond, include}]},
       {app, dns_worker, [{incl_cond, include}]}
      ]}.

{target_dir, "dns_cache_and_forward"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "{{erts_vsn}}/bin/erl"},
           {copy, "files/nodetool", "{{erts_vsn}}/bin/nodetool"},
           {copy, "files/dns_cache_and_forward", "bin/dns_cache_and_forward"},
           {copy, "files/app.config", "etc/app.config"},
           {copy, "files/vm.args", "etc/vm.args"}
           ]}.
